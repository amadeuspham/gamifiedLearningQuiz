<head>
    <script type="text/javascript" src="/js/management.js"> </script>
    <link href="https://cdn.lineicons.com/1.0.1/LineIcons.min.css" rel="stylesheet">
</head>
{{>messages}}
<aside class="questionaires" id="questionaires"> 
    <div class="container">
        <div class="row">
            <input type="text" class="questionaires_search" placeholder="Search...">
            <button type="button" id="questionaires_add"> + </button>
        </div>
        <div class="row">
            <ul class="questionaires ul">
            {{#if questionaires}}
                {{#each questionaires}}
                    {{#if this.title}}
                        {{>questionaire_listing value=@index name=this.title questions=this.questions id=this._id}}
                    {{/if}}    
                {{/each}}
            {{else}} 
                   <li> empty </li>
            {{/if}}
            </ul>
        </div>
    </div>
</aside>


<div class="editing_view" class="container">
    {{#if questionaire}}
        {{>editView name=questionaire.title questions=questionaire.questions id=questionaire.id}}
    {{else}}
        <h1> First time</h1>
    {{/if}} 
</div>
