
<div class="container" id="display_question">
    <div class="row">
        <div class="col-9">
            <h3> {{question.title}} &nbsp; MaxPoints: &nbsp;{{question.maxPoints}}</h3>
        </div>

        <div class="col-1">
            <form  method="POST" action="/management/question/delete/{{id}}/{{question._id}}"> 
                <button type="submit" class="btn btn-primary h-100"> <i class="lni-trash"></i></button>
            </form>
        </div>

        <div class="col-1" >
            <form method="GET" action="/management/question/edit/{{id}}/{{question._id}}">
                <button type="submit" class="btn btn-primary h-100">  <i class="lni-pencil"></i></button>
            </form>
        </div>
    </div>

    <div class="row">
    {{#each question.options}}
        <div class="col-sm-5">
            <div class="row">
                <strong> {{this.option}}  </strong>
            </div>  
            {{#if this.hint}}
            <div class="row">
                <label> Hint: &nbsp;</label>
                <strong> {{this.hint}}  </strong>
            </div>  
            {{/if}}
        </div>
    {{/each}}
    </div>
</div>
